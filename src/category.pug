      include includes/pages/section-header.pug

      .section-category-page 
        .container
          .section-wrapper.flex.flex-wrap
            .section-item.category
              include includes/components/category-sidebar.pug

            .section-item.main
              each item in dataVerticalPosts
                include ./includes/components/post.pug
